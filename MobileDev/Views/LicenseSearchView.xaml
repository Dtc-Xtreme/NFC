<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDev.Views.LicenseSearchView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
       <SearchBar Grid.Row="0" Placeholder="Search" WidthRequest="300"/>
        <CollectionView VerticalOptions="FillAndExpand" Grid.Row="1" ItemsSource="{Binding NumberList, Mode=TwoWay}" RemainingItemsThreshold="5" RemainingItemsThresholdReachedCommand="{Binding LoadMoreDataCommand}" ItemsUpdatingScrollMode="KeepItemsInView" SelectedItem="{Binding Number, Mode=TwoWay}" SelectionMode="Single"></CollectionView>
    </Grid>
</ContentView>
